		public static string Conclusion()
        {
			var dub = 0; // счётчик
			string FinalMessage = "";
			//var sentence = Logic.NoSpace();
			for (int a = 0; a < sentence.Length - 1; a++)
				if (sentence[a] == sentence[a + 1])
				{
					dub++; //счётчик с шагом 1
				}
			if (dub != 0)
			{
				FinalMessage = ("Количество повторяющихся пар букв в предложении: " + dub);
			}
			else
			{
				FinalMessage = ("В этом предложении нет повторяющихся пар букв");
			}
			return FinalMessage;
		}
	}
